extends ./partial/header

block content
    br
    .container
        .container-fluid
            .d-flex.justify-content-center
                .card
                    .card-header
                        h3.u-center.card-title.text-center Login
                    .card-body
                        form(action='/users/login' method='POST')
                            != messages('message', locals)
                            .input-group.form-group
                                .input-group-prepend
                                    span.input-group-text
                                        i.fas.fa-user
                                input.form-control(type='text', name='username',placeholder='Username')
                            .input-group.form-group
                                .input-group-prepend
                                    span.input-group-text
                                        i.fas.fa-key
                                input.form-control(type='password', name='password' ,placeholder='Password')
                            .row.align-items-center.remember
                                input(type='checkbox')
                                |    Remember Me
                            .form-group
                                input.form-control.btn.float-right.btn-primary(type='submit', value='Register')
                    .card-header.card-footer
                        .d-flex.justify-content-center.links
                            | Already have an Account?   
                            a(href='#')  Login
                        //
                            <div class="d-flex justify-content-center">
                            <a href="#">Forgot your password?</a>
                            </div>
    br
